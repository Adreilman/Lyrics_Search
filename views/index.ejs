<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="statics/style.css">
    <title>Get Lyrics</title>
</head>
<body>
    <div class = "search-bar">
        <form action="/search" method="post">
            <input class="searchBar" type="text" name="artistsearch" placeholder="Search for The Artist" value = "">
            <input class="searchBar" type="text" name="titlesearch" placeholder="Search for The title" value = "">
            <button class = "search-button">Search</button>
        </form>
    </div>
     <% if (locals.array_lyrics) { %>
        <div class="lyrics">
            <% array_lyrics.forEach(element => { %>
             <p><%= element %></p>
            <% }) %>
        </div>
    <% } %>
    

</body>
</html>